<% layout('layouts/boilerplate') %>

<h1>キャンプ場一覧</h1>

<!-- キャンプ場一覧の表示 -->
<% for(let camp of campGroundsAll) { %>
  <div class="card mb-3">
    <div class="row">
      <div class="col-md-4">
          <img class="img-fluid" src="<%=camp.image %>" alt="">
      </div>
      <div class="col-md-8">
          <div class="card-body">
            <h5 class="card-title">
                <%= camp.title %>
            </h5>
            <p class="card-text"><%= camp.description %></p>
            <p class="card-text">
              <small class="text-muted">
                  <%= camp.location %>
              </small>
            </div>
            <a class="btn btn-primary" href="/campgrounds/<%= camp._id %>"><%= camp.title %>の詳細 </a>
      </div>
    </div>
  </div>
  <% } %>
  
  <a href="/campgrounds/new">新規作成</a>

